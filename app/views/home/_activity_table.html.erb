<table id = "activity_table" class="table">
  <thead>
    <tr style="background: gold">
      <th>Activity</th>
      <th>From</th>
      <th>To</th>
      <!--<th>Total</th>-->
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% unless @activities.blank? %>
   
        <% @activities.each do |act| %>
         <tr style="background: lavender">
          <td><%= act.activity_name %></td>
          <td><%= act.date_from %></td>
          <td><%= act.date_to %></td>
          <!--<td>4 hrs</td>-->
          <td><button type="button" onClick = "deleteActivity(<%= act.id %>)" style="float: right;" class="btn btn-danger btn-xs">Delete Activity</button></td>
          </tr> 
       <% end %>
    
    <% end %>     
  </tbody>
</table>